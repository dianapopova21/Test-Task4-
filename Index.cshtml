@{
    ViewData["Title"] = "Home Page";
    @model List<Question>;
}
<h1>Тест ASP.NET</h1>
<h2 class="lead">Поповой Дианы К19-1</h2>
<form asp-action="Results" asp-controller="Home" method="post">

    @for(int i=0; i<Model.Count(); i++){
    <div class="border border-dark rounded bg-light m-3 py-3 px-4">
        <div class="font-weight-bold mb-2">@Model[i].Content</div>
        <div class="form-group">
            <input class="custom-radio" type="radio" asp-for="@Model[i].Answer1" value="1" name="r_@i" />
            <span>@Model[i].Answer1</span>
        </div>
        <div class="form-group">
            <input class="custom-radio" type="radio" asp-for="@Model[i].Answer2" value="2" name="r_@i" />
            <span>@Model[i].Answer2</span>
        </div>
        <div class="form-group">
            <input class="custom-radio" type="radio" asp-for="@Model[i].Answer3" value="3" name="r_@i" />
            <span>@Model[i].Answer3</span>
        </div>
        <div class="form-group">
            <input class="custom-radio" type="radio" asp-for="@Model[i].Answer4" value="4" name="r_@i" />
            <span>@Model[i].Answer4</span>
        </div>
    </div>
    }
    
    

  



    <div class="d-flex flex-column">
        <div class="col">
            <div class="row m-3">
                <input type="submit" class="btn btn-success mr-auto ml-auto" value="Завершить тест" />
            </div>
        </div>
    </div>
</form>

